<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/us_background"

    tools:context="com.cs160.joleary.catnip.Listing">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="155dp"
                android:weightSum="1"
                android:baselineAligned="false"
                android:background="@drawable/layout_border"
                android:layout_marginBottom="5dp"
                android:alpha=".9">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".66">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="-"
                        android:id="@+id/name1"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:textSize="25dp"
                        android:textColor="@color/textBlack"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:id="@+id/party1"
                        android:textSize="20dp"
                        android:layout_below="@+id/name1"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:id="@+id/website1"
                        android:layout_below="@+id/party1"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/link"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:id="@+id/email1"
                        android:textColor="@color/link"
                        android:layout_below="@+id/party1"
                        android:layout_toEndOf="@+id/website1" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/imageView2"
                        android:src="@drawable/twitter"
                        android:layout_below="@+id/website1"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp" />

                    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/website1"
                        android:layout_toEndOf="@+id/imageView2"
                        android:fillViewport="false"
                        android:layout_marginLeft="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/tweet1"
                            android:textColor="@color/textBlack"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/imageView2"
                            android:layout_below="@+id/textView3" />
                    </ScrollView>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".34">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/rep1"
                        android:src="@drawable/blank"
                        android:contentDescription="Representative 1"
                        android:layout_marginRight="2dp"
                        android:layout_weight=".8"
                        android:layout_marginTop="5dp" />

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="Details"
                        android:id="@+id/buttonDetails1"
                        android:textSize="10dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/mybutton"
                        android:layout_marginBottom="5dp" />

                </LinearLayout>

            </LinearLayout>

